<Window x:Class="wpftesting.Store"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpftesting"
        mc:Ignorable="d"
        Title="Store" Height="348.38" Width="545.37">
    <Grid>
        <ListView x:Name="lvUsers" HorizontalAlignment="Left" Height="318" VerticalAlignment="Top" Width="539">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding Name}">
                    </GridViewColumn>
                    <GridViewColumn Header="Categorie" Width="120" DisplayMemberBinding="{Binding Categorie}">
                    </GridViewColumn>
                    <GridViewColumn Header="Price" Width="60" DisplayMemberBinding="{Binding Price}">
                    </GridViewColumn>
                    <GridViewColumn Header="Sold" Width="60" DisplayMemberBinding="{Binding Sold}">
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
